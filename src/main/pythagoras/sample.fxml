<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="258.0" prefWidth="410.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.pythagoras.Controller">
   <children>
      <Label text="Enter the length of 2 lines of a rectangular triangle:" />
      <HBox prefHeight="30.0" prefWidth="200.0">
         <children>
            <Label text="Line 1  " />
            <TextField fx:id="inputX" />
         </children>
      </HBox>
      <HBox prefHeight="30.0" prefWidth="200.0">
         <children>
            <Label text="Line 2  " />
            <TextField fx:id="inputY" />
         </children>
      </HBox>
      <Button mnemonicParsing="false" text="Calculate" />
   </children>
</VBox>
